@using la_mia_pizzeria_crud_mvc.Data
@model List<Pizza>

<div class="d-flex flex-column justify-content-center align-items-center">
    <a href="@Url.Action("Create", "Pizza")" class="btn btn-primary">CREA PIZZA</a>
    @foreach (var pizza in Model)
    {

        <div class="card align-items-center my-3 py-2" style="width: 18rem;">
            <img src="@pizza.Image" class="card-img-top" alt="@pizza.Name">
            <div class="card-body d-flex flex-column align-items-center">
                <h5 class="card-title text-center">@pizza.Name</h5>
                <p class="card-text text-center">@pizza.Description</p>
                <h5 class="card-text text-center">@pizza.Price €</h5>
                <a href="@Url.Action("GetPizza", "Pizza", new { id = pizza.Id } )" class="btn btn-warning">DETTAGLI</a>
                <a href="@Url.Action("Update", "Pizza", new { id = pizza.Id } )" class="btn btn-primary my-2">MODIFICA</a>
            </div>
        </div>

    }
</div>